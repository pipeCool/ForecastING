<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Transaction.
    -->
    <changeSet id="20170508045236-1" author="jhipster">
        <createTable tableName="transaction">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trx_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="booking_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="amount" type="double">
                <constraints nullable="true" />
            </column>

            <column name="original_amount" type="double">
                <constraints nullable="true" />
            </column>

            <column name="original_currency" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="account_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="transaction" columnName="trx_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="transaction" columnName="booking_date" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
